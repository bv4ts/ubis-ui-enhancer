{
  "manifest_version": 3,
  "name": "UBIS UI Enhancer",
  "version": "2.1",
  "description": "Enhance the Istanbul AydÄ±n University Information System (UBIS) with a modern, glassmorphic UI.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://ubis.aydin.edu.tr/*"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_title": "UBIS UI Enhancer",
      "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://ubis.aydin.edu.tr/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "content.js", "ribbon.png", "Uni_logo_DarkMode.png", "Uni_logo_LightMode.png", "Uni_logo_GirlyMode.png", "Uni_logo_BatmanMode.png", "Uni_logo_SpiderManMode.png"],
      "matches": ["*://ubis.aydin.edu.tr/*"]
    }
  ]
}
